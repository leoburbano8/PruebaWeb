@model BF.Models.Contacto
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/General.css" rel="stylesheet" />
<section class="row justify-content-center mt-5">
    <header class="row bg-dark justify-content-center mt-3 mb-3">
        <h2 class="text-capitalize text-white">¿Quieres hablar con nosotros?</h2>
    </header>
</section>

<!-- LIST GROUP COMO TAB-PANEL -->
<section class="row justify-content-center">
    <div class="col-md-5">
        <div class="list-group">
            <a class="list-group-item list-group-item-action active" data-toggle="list" data-target="#contactar">Contactar</a>
        </div>
    </div>
    <div class="col-md-6">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="contactar">
                @using (Html.BeginForm("Nuevo", "Contacto", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(d => d.Correo)
                                @Html.TextBoxFor(d => d.Correo, "", new { @class = "form-control" })
                                @Html.ValidationMessageFor(d => d.Correo, null, new { @class = "red" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.Mensaje)<br />
                                @Html.TextAreaFor(d => d.Mensaje, new { @class = "form-control" , rows = "6" })
                                @Html.ValidationMessageFor(d => d.Mensaje, null, new { @class = "red" })
                            </div>
                            <br />
                            <div class="text-right">
                                <input value="Enviar" class="btn btn-primary" type="submit" />
                            </div>
                        </div>

                    </div>
                }
                
            </div>
            
            </div>
    </div>
</section>




